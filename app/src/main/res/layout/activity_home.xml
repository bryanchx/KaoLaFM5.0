<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.kaolafm50.others.widget.KaoLaSlidePanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_spl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--侧边菜单-->
<!--<android.support.design.widget.NavigationView-->
    <!--android:id="@+id/home_nv"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:elevation="0dp"-->
    <!--app:menu="@menu/settings"/>-->
<LinearLayout
    android:id="@+id/home_nv"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f00"/>

<LinearLayout
    android:id="@+id/home_content_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="5dp"
    tools:context="com.example.administrator.kaolafm50.others.ui.HomeActivity">
    <FrameLayout
        android:id="@+id/home_content_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        style="@style/horizontal_line"/>
    <RadioGroup
        android:id="@+id/home_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">
        <RadioButton
            android:id="@+id/home_discovery_rb"
            style="@style/home_rb"
            android:drawableTop="@drawable/select_home_rb_discovery"
            android:text="@string/home_rg_discovery"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/home_my_rb"
            style="@style/home_rb"
            android:drawableTop="@drawable/select_home_rb_my"
            android:text="@string/home_rg_my"/>
        <RadioButton
            android:id="@+id/home_offline_rb"
            style="@style/home_rb"
            android:drawableTop="@drawable/select_home_rb_offline"
            android:text="@string/home_rg_offline"/>
    </RadioGroup>
</LinearLayout>
</com.example.administrator.kaolafm50.others.widget.KaoLaSlidePanelLayout>