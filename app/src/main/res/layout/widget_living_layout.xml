<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/living_panel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="mustListenTitle"/>
        <TextView
            android:id="@+id/living_panel_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:drawableRight="@drawable/ic_rank_right_arrow"
            android:gravity="center_vertical"
            android:text="@string/more"
            android:layout_alignBottom="@+id/living_panel_title_tv"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"/>
        <View
            android:layout_below="@id/living_panel_more_tv"
            style="@style/horizontal_line"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <com.example.administrator.kaolafm50.discover.live_page.widget.LivingItem
        android:id="@+id/living_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view
        style="@style/horizontal_line"/>
    <com.example.administrator.kaolafm50.discover.live_page.widget.LivingItem
        android:id="@+id/living_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view
        style="@style/horizontal_line"/>
    <com.example.administrator.kaolafm50.discover.live_page.widget.LivingItem
        android:id="@+id/living_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view
        style="@style/horizontal_line"/>
    <com.example.administrator.kaolafm50.discover.live_page.widget.LivingItem
        android:id="@+id/living_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view
        style="@style/horizontal_line"/>
    <com.example.administrator.kaolafm50.discover.live_page.widget.LivingItem
        android:id="@+id/living_item5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <view
        style="@style/horizontal_line"/>
</LinearLayout>