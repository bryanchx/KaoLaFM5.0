<com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".discover.recommend_page.ui.RecommendFragment">
        <LinearLayout
        android:id="@+id/recommend_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:layout_marginTop="5dp"
            android:id="@+id/recommend_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v4.view.ViewPager>

        <android.support.design.widget.TabLayout
            android:id="@+id/recommend_tl"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:tabIndicatorColor="@color/public_red"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
