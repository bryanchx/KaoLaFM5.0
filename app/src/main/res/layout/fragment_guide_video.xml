<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.example.administrator.kaolafm50.others.widget.FullScreenVideoView
        android:id="@+id/guide_video_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/guide_video_left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/guide_video_right_iv"
        android:layout_alignBottom="@+id/guide_video_right_iv"
        android:visibility="invisible"
        android:paddingRight="10dp"/>
    <ImageView
        android:id="@+id/guide_video_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"/>
</RelativeLayout>