<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".discover.recommend_page.ui.RecommendFragment">
        <LinearLayout
            android:id="@+id/live_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:layout_marginTop="5dp"
            android:id="@+id/live_vp_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="horizontal"/>
                <!--广告下方的滚动条-->
        <android.support.design.widget.TabLayout
            android:id="@+id/live_tl_banner"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
                <!--精选直播预告水平滚动条-->
        <android.support.design.widget.TabLayout
            app:tabSelectedTextColor="#fff"
            app:tabTextColor="@color/colorAccent"
            app:tabIndicatorHeight="0dp"
            app:tabPadding="-10dp"
            android:id="@+id/live_tl_live_forecast"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
                <!--精选直播预告显示页面-->
        <android.support.v4.view.ViewPager
            android:id="@+id/live_vp_live_forecast"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>


        </LinearLayout>
</ScrollView>
