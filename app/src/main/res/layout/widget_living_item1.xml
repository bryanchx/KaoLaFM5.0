<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_living_item1_content_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/widget_living_item1_name_tv"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:paddingLeft="30dp"
        android:layout_height="wrap_content"
        android:text="123desdesdesdesdesdesdesdesdesdesdesdesdesdes"
        android:ellipsize="end"
        android:layout_below="@+id/widget_living_item1_content_iv"
        android:layout_alignRight="@+id/widget_living_item1_content_iv"
        android:layout_alignEnd="@+id/widget_living_item1_content_iv"
        android:layout_alignLeft="@+id/widget_living_item1_love_iv"
        android:layout_alignStart="@+id/widget_living_item1_love_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="comperes"
        android:id="@+id/widget_living_item1_comperes_tv"
        android:layout_below="@+id/widget_living_item1_name_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_living_item1_love_iv"
        android:src="@drawable/select_home_ib_play_good"
        android:layout_above="@+id/widget_living_item1_name_tv"
        android:layout_margin="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.7w"
        android:layout_margin="3dp"
        android:id="@+id/widget_living_item1_programLikedNum_tv"
        android:layout_above="@+id/widget_living_item1_name_tv"
        android:layout_toRightOf="@+id/widget_living_item1_love_iv"
        android:layout_toEndOf="@+id/widget_living_item1_love_iv"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_living_item1_back_listen_tv"
        android:src="@drawable/live_replay"
        android:layout_below="@+id/widget_living_item1_love_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>